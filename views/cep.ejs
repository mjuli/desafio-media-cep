<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container w-50 mt-4">
  <div class="card text-center">

    <div class="card-header">
      <h1 class="text-center text-black-50">Buscar CEP</h1>
    </div>
    <div class="card-body text-secondary">
      <form method="GET" action="/buscarcep">
        <div class="mb-3">
          <input class="form-control" type="text" name="cep" placeholder="Digite o CEP" pattern="\d{5}-?\d{3}" required title="Formatos vÃ¡lidos: 12345-678 ou 12345678">
        </div>

        <div class="d-md-flex justify-content-md-end">
          <button class="btn btn-secondary"> Buscar CEP </button>
        </div>

      </form>

      <div class="justify-content text-start">
        <% if(endereco?.cep) { %>
          <div class="alert alert-secondary mt-4">
            <% if(endereco.cep) { %> <p class="mb-0"> CEP: <%= endereco.cep %> </p> <% } %>
            <% if(endereco.logradouro) { %> <p class="mb-0"> Logradouro: <%= endereco.logradouro %> </p> <% } %>
            <% if(endereco.complemento) { %> <p class="mb-0"> Complemento: <%= endereco.complemento %> </p> <% } %>
            <% if(endereco.bairro) { %> <p class="mb-0"> Bairro: <%= endereco.bairro %></p> <% } %>
            <% if(endereco.localidade) { %> <p class="mb-0"> Cidade: <%= endereco.localidade %> </p> <% } %>
            <% if(endereco.uf) { %> <p class="mb-0"> Estado: <%= endereco.uf %> </p> <% } %>
          </div>
        <% } %>

      </div>

      <div class="justify-content text-center">
        <% if(warn) { %>
          <p class="alert alert-danger mt-4"> <%= warn %> </p>
        <% } %>

    </div>
  </div>
</div>

<%- include('partials/footer') %>